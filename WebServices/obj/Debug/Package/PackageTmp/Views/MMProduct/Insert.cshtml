
@{
    ViewBag.Title = "Insertar Producto";
    @Styles.Render("~/Content/mainstyles.css");
    @Styles.Render("~/Content/products.css");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="welcome">
    <div class="background-image" style="background-image: url(Img/background.jpg);"></div>
    <h1>Insert a Product</h1>


    <div class="main-content">


        <form class="form-basic" method="post" action="#">

            <div class="form-row">
                <label>
                    <span>Brand</span>
                    <input type="text" name="brand">
                </label>
            </div>
            <div class="form-row">
                <label>
                    <span>Price</span>
                    <input type="text" name="price">
                </label>
            </div>
            <div class="form-row">
                <label>
                    <span>Name</span>
                    <input type="text" name="name">
                </label>
            </div>


            <div class="form-row">
                <label>
                    <span>Category</span>
                    <select name="dropdown">
                        <option>Viento</option>
                        <option>Cuerda</option>
                        <option>Percusion</option>
                        <option>Instrumentos Electricos</option>
                    </select>
                </label>
            </div>
            <div class="form-row">
                <label>
                    <span>Description</span>
                    <textarea name="textarea"></textarea>
                </label>
            </div>

            <div class="form-row">
                <button type="submit">Insert</button>
            </div>

        </form>

    </div>


</section>